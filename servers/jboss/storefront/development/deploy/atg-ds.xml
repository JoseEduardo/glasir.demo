<?xml version="1.0" encoding="UTF-8"?>
<datasources>
    <!-- H2 -->

    <xa-datasource>
        <jndi-name>ATGProductionDS</jndi-name>
        <track-connection-by-tx/>
        <transaction-isolation>TRANSACTION_READ_COMMITTED</transaction-isolation>
        <xa-datasource-class>org.h2.jdbcx.JdbcDataSource</xa-datasource-class>
        <xa-datasource-property name="URL">jdbc:h2:mem:atg_core;DB_CLOSE_ON_EXIT=FALSE;MODE=MySQL</xa-datasource-property>
        <xa-datasource-property name="User">sa</xa-datasource-property>
        <xa-datasource-property name="Password"></xa-datasource-property>
        <min-pool-size>5</min-pool-size>
        <max-pool-size>20</max-pool-size>
        <idle-timeout-minutes>0</idle-timeout-minutes>
        <prepared-statement-cache-size>32</prepared-statement-cache-size>
    </xa-datasource>

    <xa-datasource>
        <jndi-name>ATGCatalogDS</jndi-name>
        <xa-datasource-class>org.h2.jdbcx.JdbcDataSource</xa-datasource-class>
        <track-connection-by-tx/>
        <transaction-isolation>TRANSACTION_READ_COMMITTED</transaction-isolation>
        <xa-datasource-property name="URL">jdbc:h2:mem:atg_cat;DB_CLOSE_ON_EXIT=FALSE;MODE=MYSQL</xa-datasource-property>
        <xa-datasource-property name="User">sa</xa-datasource-property>
        <xa-datasource-property name="Password"></xa-datasource-property>
        <min-pool-size>5</min-pool-size>
        <max-pool-size>20</max-pool-size>
        <idle-timeout-minutes>0</idle-timeout-minutes>
        <prepared-statement-cache-size>32</prepared-statement-cache-size>
    </xa-datasource>

</datasources>
